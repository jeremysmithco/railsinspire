<%= content_tag :div, class: "nested-form-wrapper bg-[#cecece] p-4 mb-6 rounded", data: { new_record: form.object.new_record? } do %>
  <div class="mb-2">
    <%= form.label :path %>
    <%= form.text_field :path %>
  </div>

  <div>
    <%= form.label :contents, "Code" %>
    <%= form.text_area :contents, rows: 8 %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, rows: 2 %>
  </div>

  <button type="button" data-action="nested-form#remove">Remove</button>

  <%= form.hidden_field :_destroy %>
<% end %>
