<% set_meta_tags title: "Your Samples" %>

<% content_for(:header) do %>
  <div>
    <h1 class="text-xl font-normal leading-normal text-white">
      Your Samples
    </h1>
  </div>

  <div class="flex flex-col items-end">
    <div class="mb-1">
      <% if policy(Sample).new? %>
        <%= link_to "New", [:new, :sample], class: "px-2 py-1 bg-[#950000] text-white text-sm rounded" %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <%= render collection: @samples, partial: "samples/sample" %>
</div>
