<% set_meta_tags title: "Your Samples" %>

<% content_for(:header) do %>
  <%= render HeaderComponent.new do |c| %>
    <% c.with_title.with_content("Your Samples") %>

    <% c.with_details do %>
      <% if policy(Sample).new? %>
        <%= link_to "New", [:new, :sample], class: "px-2 py-1 bg-[#950000] text-white text-sm rounded" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <%= render collection: @samples, partial: "samples/sample" %>
</div>
